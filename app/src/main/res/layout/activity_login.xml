    <!--        tools:srcCompat="@drawable/ic_facebook" />-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="أو التسجيل باستخدام"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/login_etPassword"
        app:layout_constraintStart_toStartOf="@+id/login_etPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/login_btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:shadowColor="#00FFFFFF"
        android:text="إنشاء حساب"
        android:textColor="@color/blue_light"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/login_btnCreatAccount"
        app:layout_constraintStart_toStartOf="@+id/login_btnCreatAccount"
        app:layout_constraintTop_toBottomOf="@+id/login_btnCreatAccount" />

    <ImageView
        android:id="@+id/login_btnFacebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/login_btnGoogle"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/login_btnGoogle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_btnFacebook"
        app:layout_constraintEnd_toStartOf="@+id/login_btnFacebook"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/login_btnFacebook"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_btnGoogle"
        app:layout_constraintEnd_toStartOf="@+id/login_btnGoogle"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/login_btnGoogle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/twitter" />

    <TextView
        android:id="@+id/login_btnCreatAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ليس لديك حساب؟"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/login_btinSubmit"
        app:layout_constraintStart_toStartOf="@+id/login_btinSubmit"
        app:layout_constraintTop_toBottomOf="@+id/login_btinSubmit" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="الاسم"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="كلمة المرور"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_etEmail" />

    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="نسيت كلمة المرور"
        android:textColor="@color/blue_light"
        app:layout_constraintStart_toStartOf="@+id/login_etPassword"
        app:layout_constraintTop_toBottomOf="@+id/login_etPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>